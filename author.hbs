{{!< default}}

{{> header}} 

<main class="container mx-auto">

  {{#author}}
  <header class="font-inter sm:pb-5 pb-5 mb-10 sm:mb-20 border-b border-gray-100">
    <div class="flex items-center pb-4 border-b border-gray-100">
      {{#if profile_image}}
        <img class="author-profile-image w-10 h-10 rounded-full"
          src="{{profile_image}}" alt="{{name}}">
      {{else}}
        <span class="author-profile-image w-10 h-10 rounded-full">{{> "icons/avatar"}}</span>
      {{/if}}
      <div class="flex flex-col ml-3">
        <h1 class="text-lg sm:text-xl font-semibold mb-0 text-gray-600">{{name}}</h1>
        <span class="text-xs inline-block text-gray-500">
          {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
        </span>
      </div>
    </div>

    <div class="text-xs text-gray-400 font-medium mt-4">
      {{#if bio}}
        {{bio}}
      {{/if}}
    </div>

    <div class="text-xs mt-3 text-gray-700 font-semibold tracking-wide space-x-3">
      {{#if website}}
        <a href="{{website}}" target="_blank" rel="noopener" class="hover:underline">WEB</a>
      {{/if}}
      {{#if twitter}}
        <a href="{{twitter_url}}" target="_blank" rel="noopener" class="hover:underline">TW</a>
      {{/if}}
      {{#if facebook}}
        <a href="{{facebook_url}}" target="_blank" rel="noopener" class="hover:underline">FB</a>
      {{/if}}
    </div>
    </div>
  </header>
  {{/author}}

  <div class="posts">
    {{#foreach posts}}
      {{> "post-card"}}
    {{/foreach}}
  </div>
  {{pagination}}
</main>

{{> footer}}
